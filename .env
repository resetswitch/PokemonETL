# NOTE= REFRAIN FROM USING '' OR "" FOR VARIABLES DEFINED HERE

# https=//en.wikipedia.org/wiki/List_of_tz_database_time_zones
# Use the column that says "TZ database name".
# To find your system's preconfigured timezone run= cat /etc/timezone
TIMEZONE=America/Chicago

ENV='prod' #'prod' or 'test'

# Do not change
PROJECT_NAME=PokemonETL

# Choose your desired directory
PATH_TO_CREATE_PROJECT=CREATEPATHHERE
PROJECT_DIR_PATH_LOCAL=${PATH_TO_CREATE_PROJECT}/${PROJECT_NAME}
PROJECT_DIR_PATH_DOCKER=/${PROJECT_NAME}
PROJECT_DIR_PATH=${PROJECT_DIR_PATH_LOCAL}


# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pokemondb
POSTGRES_USER=testuser
POSTGRES_PASSWORD=testpass
POSTGRES_PATH_CONFIG_LOCAL=${PROJECT_DIR_PATH}/db
POSTGRES_PATH_CONFIG_DOCKER=/var/lib/postgresql/18/docker

# python
PYTHON_SCRIPTS_PATH=${PROJECT_DIR_PATH}/app/scripts
LOG_FILE_PATH=${PROJECT_DIR_PATH}/app/logs/app.log
LOG_CONFIG_PATH=${PROJECT_DIR_PATH}/logging_config.yaml

